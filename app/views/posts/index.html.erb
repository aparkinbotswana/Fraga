<p id="notice"><%= notice %></p>

<h1>Posts</h1>


<%= form_tag posts_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <!-- <%= hidden_field :user, :value => @current_user %> -->
    <%= submit_tag "Search", :name => nil %>




  </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Question</th>
      <!-- <th>Latitude</th>
      <th>Longitude</th> -->
      <th>User</th>
      <th>Active</th>
      <!-- <th>Emjoi</th> -->
      <th>Votes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.question %></td>
        <!-- <td><%= post.latitude %></td>
        <td><%= post.longitude %></td> -->
        <td><%= post.user_id %></td>
        <td><%= post.active %></td>
        <!-- <td><%= post.emjoi %></td> -->

        <!-- #9 July 2017
        # By: Michelle
        # post route amended to allow for upvotes
         -->
         <%count = pluralize(post.votes.count, 'vote') %>
        <td class='vote-count'><%=count%></td>
          <td><%=button_to 'vote', upvote_post_path(post), method: :post, :class=> 'vote-button', remote: true%></td>
        <!-- end upvote -->

        <td><%= link_to 'Show', post %></td>

        <% if @current_user %>
          <% if post.user_id == @current_user || @current_user.is_admin == true %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

