<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="ui form">
  <div class="field emoji-picker-container">
    <%= f.label :question %>
    <%= f.text_area :question, class: 'form-control', data: { emojiable: true } %>
  </div>
</div>

  <p>Pinpoint where you want to ask your question, or leave it blank and we will use your location based on your IP</p>




<div class="ui form">
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
</div>


  <div class="ui form">
  <div class="field">
  <%= f.select :emjoi, options_for_select([["How ya feel??", ""], "happy", "sad", "angry", "bored", "cheeky", "confused", "cool", "devo", "joy", "love", "sad", "sick", "silly", "thinking", "unhappy", "veryhappy", "wasted"])%>
  </div>
  </div>




  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
