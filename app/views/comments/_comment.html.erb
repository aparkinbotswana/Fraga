
<li>
  <%= form_for [comment, Comment.new] do |f| %>

    <div class="comment" style="border:1px solid black">

      <div class="content">
        <a class="author"><%= @user.find(comment.user_id).username %></a>
        <div class="metadata">
          <span class="date"><small> <%= time_ago_in_words(comment.created_at) %> ago</small></span>
        </div>
        <div class="text">
          <%= comment.content %>
        </div>
        <div class="text">
          <%= f.text_area :content, placeholder: "Add a Reply", :class => "comment-submit" %>
        </div>
        <div class="actions">
          <div class="actions">
            <a class="reply">Reply</a>
          </div>
          <%= f.submit "Reply", :class => "comment-submit"  %>
          <%= comment.id %>
        </div>
      </div>
    </div>

  <% end %>



<ul style="list-style-type: none;">
<%= render partial: 'comments/comment', collection: comment.comments %>
</ul>

</li>
